# Modaics Backend Environment Configuration

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
SECRET_KEY=change-me-in-production-use-32-char-key!

# Database
DATABASE_URL=postgresql+asyncpg://modaics:modaics@localhost:5432/modaics

# Redis
REDIS_URL=redis://localhost:6379/0

# AI/ML
CLIP_MODEL_NAME=Marqo/marqo-fashionCLIP
CLIP_DEVICE=cpu
EMBEDDING_DIMENSION=512
MODEL_CACHE_DIR=./model_cache

# Moda AI Assistant (choose one)
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-key-here
# Or use OpenAI: https://platform.openai.com/
# OPENAI_API_KEY=your-openai-key-here

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# File Upload
MAX_UPLOAD_SIZE_MB=10

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
